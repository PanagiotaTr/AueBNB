<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentsListViewActivity">

    <ImageView
        android:id="@+id/ct_backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bordo_banner" />

    <TextView
        android:id="@+id/ct_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="16dp"
        android:text="Comments"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/ct_backgroundImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ct_roomImage"
        android:layout_width="172dp"
        android:layout_height="134dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/ct_roomName"
        android:layout_width="229dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginStart="180dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Name Of Room"
        android:textColor="#7F1734"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ct_area_owner"
        android:layout_width="229dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginStart="180dp"
        android:layout_marginTop="114dp"
        android:gravity="center"
        android:text="Area Owner"
        android:textColor="#7F1734"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ct_stars_price"
        android:layout_width="229dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginStart="180dp"
        android:layout_marginTop="158dp"
        android:gravity="center"
        android:text="Stars Price"
        android:textColor="#7F1734"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ct_diax"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="230dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bordo_banner" />

    <ImageView
        android:id="@+id/ct_home"
        android:layout_width="41dp"
        android:layout_height="52dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home" />

    <ListView
        android:id="@+id/ct_list_view"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ct_diax" />


</androidx.constraintlayout.widget.ConstraintLayout>