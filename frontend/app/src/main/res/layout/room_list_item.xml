<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_room_image"
        android:layout_width="139dp"
        android:layout_height="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/list_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/list_room_image"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/list_room_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:isIndicator="true"
        android:progressTint="#FFEB3B"
        android:rating="2.1"
        app:layout_constraintStart_toEndOf="@+id/list_room_image"
        app:layout_constraintTop_toBottomOf="@+id/list_room_name" />

    <TextView
        android:id="@+id/list_room_rating_numb"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="3.5"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/list_room_image"
        app:layout_constraintTop_toBottomOf="@+id/list_room_rating" />

    <TextView
        android:id="@+id/list_room_rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Very good"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/list_room_rating_numb"
        app:layout_constraintTop_toBottomOf="@+id/list_room_rating" />

    <TextView
        android:id="@+id/list_room_num_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:text="1337 reviews"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/list_room_rating_text"
        app:layout_constraintTop_toBottomOf="@+id/list_room_rating" />

    <TextView
        android:id="@+id/list_room_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/location_tag"
        android:text="Glyfada"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/list_room_image"
        app:layout_constraintTop_toBottomOf="@+id/list_room_rating_numb" />

    <TextView
        android:id="@+id/list_room_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="2dp"
        android:text="130 â‚¬"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_room_persons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="3 persons"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/list_room_image"
        app:layout_constraintTop_toBottomOf="@+id/list_room_area" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="price per night:"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/list_room_price"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>